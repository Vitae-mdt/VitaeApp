<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardNFC">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texto_nfc"
        android:background="@color/purple_200"
        android:padding="9dp"
        android:text="Compartir Via NFC"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"/>

    <Button
        android:id="@+id/boton_escribir_NFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:padding="9dp"
        android:text="Cargar datos a tarjeta NFC"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_nfc"
        app:layout_constraintVertical_bias="0.251"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/boton_leer_datos_NFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/purple_200"
        android:padding="9dp"
        android:text="Leer datos de tarjeta NFC"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_escribir_NFC"
        app:layout_constraintVertical_bias="0.158"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>


    <Button
        android:id="@+id/boton_volver_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:padding="9dp"
        android:text="Volver a menÃº inicio"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_leer_datos_NFC"
        app:layout_constraintVertical_bias="0.295"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

